								"screens"
							],
							"query": [
								{
									"key": "search",
									"value": "lobby",
									"description": "Search for screens with 'lobby' in name"
								},
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
